{
  "$schema": "https://raw.githubusercontent.com/qooxdoo/qooxdoo-compiler/master/resource/schema/v1/compile.json",
  "applications": [
    {
      "class": "qxl.testtapper.Application",
      "name": "testtapper",
      "title": "TestTAPper - The Qooxdoo Test Runner",
      "theme": "qx.theme.Simple",
      "include": [
        "qxl.testtapperdemo.test.*"
      ]
    }
  ],
  "exclude": [
    "qx.test.*",
    "qx.module.Blocker",
    "qx.module.Placement"
  ],
  "targets": [
    {
      "type": "source",
      "outputPath": "source-output",
      "bundle": {
        "include": "qx.*"
      },
      "babelOptions": {
        "targets": {
        "edge": "18",
        "chrome": "73",
        "firefox": "66"
        }
      }
    },{
      "type": "build",
      "outputPath": "build-output",
      "babelOptions": {
        "targets": {
        "edge": "18",
        "chrome": "73",
        "firefox": "66"
        }
      }
    }
  ],

  "defaultTarget": "source",

  "locales": [
    "en"
  ],
  "serve": {
     "listenPort": 8089
  }
}
